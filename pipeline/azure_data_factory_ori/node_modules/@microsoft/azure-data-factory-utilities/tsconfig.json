{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2016"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
